//Auto Cascading Title Fetch [incomplete] [pita]
String titleProper;
if(!(titles[vars.dialoguePrimary][vars.dialogueMinor] == ":;")){
  titleProper = titles[vars.dialoguePrimary][vars.dialogueMinor];
} else {

  int vars.dialogueMinorProper = vars.dialogueMinor;
  int vars.dialoguePrimaryProper = vars.dialoguePrimary;

  while (titles[vars.dialoguePrimaryProper][vars.dialogueMinorProper] == ":;") {
    if (vars.dialogueMinorProper > 0) {
      vars.dialogueMinorProper--;
    } else if (vars.dialoguePrimaryProper > 0) {
      vars.dialoguePrimaryProper--;
      vars.dialogueMinorProper = vars.dialogueMinor;
    } else {
      print("Error all the way backed up!\n");
    }
  }
  titleProper = titles[vars.dialoguePrimaryProper][vars.dialogueMinorProper];
}
